<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_forecast_day"
            android:text="tomorrow"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/iv_forecast_image"
            app:layout_constraintBottom_toBottomOf="@+id/iv_forecast_image" style="@style/styleForecastText"/>

    <TextView
            android:text="min"
            style="@style/styleForecastText"
            android:id="@+id/tv_forecast_temp_min"
            app:layout_constraintTop_toTopOf="@+id/iv_forecast_image"
            app:layout_constraintBottom_toBottomOf="@+id/iv_forecast_image"
            app:layout_constraintEnd_toStartOf="@+id/tv_forecast_temp_max"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

    <TextView
            style="@style/styleForecastText"
            android:id="@+id/tv_forecast_temp_max"
            android:text="max"
            app:layout_constraintTop_toTopOf="@+id/tv_forecast_temp_min"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forecast_temp_min"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <ImageView
            android:id="@+id/iv_forecast_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/styleSmallImageWeather"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>