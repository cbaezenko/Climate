<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="City"
            style="@style/styleForecastText"
            android:id="@+id/tv_city_name" app:layout_constraintTop_toTopOf="@+id/iv_city_condition"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_city_condition"/>
    <TextView
            android:text="temperature"
            style="@style/styleForecastText"
            android:id="@+id/tv_weather_temp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintTop_toTopOf="@+id/iv_city_condition"
            app:layout_constraintBottom_toBottomOf="@+id/iv_city_condition"/>
    <ImageView style="@style/styleSmallImageWeather" tools:srcCompat="@tools:sample/avatars"
               android:id="@+id/iv_city_condition"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/tv_weather_temp"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>